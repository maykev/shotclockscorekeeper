<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:background="#0099cc"
    tools:context=".PlayMatchActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <TableLayout android:id="@+id/fullscreen_content_controls"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:background="#ffffffff"
            tools:ignore="UselessParent"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewTimer"
                    android:gravity="center"
                    android:textColor="#ff000000"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:background="#ff00e900"
                    android:layout_span="2"
                    android:textSize="465dp"
                    android:enabled="true" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewPlayer1Name"
                    android:gravity="center"
                    android:textSize="50dp"
                    android:typeface="sans"
                    android:textColor="#ffffffff"
                    android:layout_column="0"
                    android:background="#ff005b8d" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewPlayer2Name"
                    android:gravity="center"
                    android:textSize="50dp"
                    android:typeface="sans"
                    android:textColor="#ffffffff"
                    android:layout_column="1"
                    android:background="#ff005b8d"
                    android:autoText="false" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <view
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    class="software.spartacus.com.shotclockscorekeeper.ScoreTextView"
                    android:id="@+id/scoreTextViewPlayer1"
                    android:typeface="sans"
                    android:textColor="#ff000000"
                    android:layout_column="0"
                    android:gravity="center"
                    android:textSize="200dp"
                    android:singleLine="true" />

                <view
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    class="software.spartacus.com.shotclockscorekeeper.ScoreTextView"
                    android:id="@+id/scoreTextViewPlayer2"
                    android:typeface="sans"
                    android:textColor="#ff000000"
                    android:gravity="center"
                    android:layout_column="1"
                    android:singleLine="true"
                    android:textSize="200dp" />

            </TableRow>

        </TableLayout>
    </FrameLayout>

</FrameLayout>

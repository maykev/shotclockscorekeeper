<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#0099cc"
    tools:context="software.spartacus.com.shotclockscorekeeper.StartMatchActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:fitsSystemWindows="true">

        <TableLayout android:id="@+id/fullscreen_content_controls" style="?metaButtonBarStyle"
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:layout_gravity="center"
            tools:ignore="UselessParent"
            android:background="@color/black_overlay"
            android:gravity="center|top"
            android:measureWithLargestChild="false"
            android:stretchColumns="*"
            android:baselineAligned="false">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/listViewMatches"
                    android:layout_column="0"
                    android:choiceMode="singleChoice"
                    android:textAlignment="center"
                    android:textFilterEnabled="false"
                    android:layout_margin="40dp"
                    android:listSelector="@drawable/list_selector" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:id="@+id/buttonStartMatch"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Start Match"
                    android:layout_gravity="center"
                    android:enabled="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:typeface="sans"
                    android:layout_column="0"
                    android:width="350dp"
                    android:padding="20dp"
                    android:textSize="50dp" />
            </TableRow>
        </TableLayout>
    </FrameLayout>

</FrameLayout>
